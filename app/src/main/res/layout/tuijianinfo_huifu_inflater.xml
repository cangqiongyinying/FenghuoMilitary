<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/tuijianinfo_huifu_header"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        app:riv_corner_radius="50dp"
        android:layout_height="30dp"
        android:layout_gravity="top"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tuijianinfo_huifu_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#2854e6"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tuijianinfo_huifu_junxian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tuijianinfo_huifu_nickname"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tuijianinfo_huifu_dateline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            android:layout_marginBottom="5dp"/>
        <phone1000.com.firemilitary.CustomerView.CustomerListview
            android:id="@+id/tuijianinfo_huifu_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/tuijianinfo_huifu_jubao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"/>
            <ImageButton
                android:id="@+id/tuijianinfo_huifu_imagehuifu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/tuijianinfo_huifu_texthuifu"/>
            <TextView
                android:id="@+id/tuijianinfo_huifu_texthuifu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tuijianinfo_huifu_jubao"/>
            <ImageButton
                android:id="@+id/tuijianinfo_huifu_dianzan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/tuijianinfo_huifu_imagehuifu"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>