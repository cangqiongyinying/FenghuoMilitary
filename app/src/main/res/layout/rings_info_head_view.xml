<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activityBackgroundLight">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorWhite"
        android:text="@string/fenghuo_camp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:padding="10dp"
        android:background="@color/colorWhite">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/info_user_face_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/rings_info_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/colorText"
            android:layout_toRightOf="@id/info_user_face_icon"
            android:layout_toEndOf="@id/info_user_face_icon"/>
        <TextView
            android:id="@+id/rings_info_user_lv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rings_info_user_name"
            android:layout_toEndOf="@id/rings_info_user_name"
            android:textSize="@dimen/text_size_small" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rings_info_user_lv"
            android:layout_toEndOf="@id/rings_info_user_lv"
            android:src="@drawable/louzhu_icon"/>
        <TextView
            android:id="@+id/rings_info_date_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/rings_info_user_name"
            android:layout_alignStart="@id/rings_info_user_name"
            android:layout_below="@id/rings_info_user_name" />
        <Button
            android:id="@+id/rings_info_guanzhu"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/guanzhu_selected"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">
        <TextView
            android:id="@+id/rings_info_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:textSize="20sp"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/rings_info_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.5"
            android:padding="5dp"
            android:textSize="@dimen/text_size_change"/>
    </LinearLayout>
</LinearLayout>