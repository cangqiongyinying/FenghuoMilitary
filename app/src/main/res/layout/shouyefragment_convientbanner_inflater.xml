<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/shouyefragment_convientbanner_inflater_imageview"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/shouyefragment_convientbanner_inflater_textview"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:textSize="15sp"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/shouyefragment_convientbanner_inflater_imageview"
        android:layout_height="wrap_content" />
</RelativeLayout>