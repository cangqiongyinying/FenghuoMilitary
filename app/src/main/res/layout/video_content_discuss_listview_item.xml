<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/discuss_lv_civ"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/avatar" />

    <TextView
        android:id="@+id/discuss_lv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/discuss_lv_civ"
        android:text="用户名"
        android:textColor="#0000ff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/discuss_lv_role_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/discuss_lv_nickname"
        android:text="列兵"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/discuss_lv_dateline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/discuss_lv_nickname"
        android:layout_below="@id/discuss_lv_nickname"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/discuss_lv_civ"
        android:text="2016"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/discuss_lv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/discuss_lv_nickname"
        android:layout_below="@id/discuss_lv_civ"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:text="太可昔了、要是真的就好了、"
        android:textColor="#000000"
        android:textSize="18sp" />

    <!--&lt;!&ndash;当评论为空时，显示此页&ndash;&gt;-->
