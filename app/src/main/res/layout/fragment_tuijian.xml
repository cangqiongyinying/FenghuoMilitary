<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="phone1000.com.firemilitary.Fragment.TuijianFragment">
   <LinearLayout
       android:id="@+id/tuijiamfragment_linearlayout"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:orientation="horizontal">
           <android.support.design.widget.TabLayout
               android:id="@+id/tuijiamfragment_tablelayout"
               android:layout_width="0dp"
               android:layout_weight="7"
               android:layout_height="wrap_content"></android.support.design.widget.TabLayout>
           <ImageButton
               android:id="@+id/tuijianfragment_imagebutton"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:background="#00000000"
               android:layout_gravity="center_vertical"
               android:src="@drawable/arrow_down_2"
               android:layout_height="wrap_content" />
       </LinearLayout>
       <android.support.v4.view.ViewPager
           android:id="@+id/tuijianfragment_viewpager"
           android:layout_width="match_parent"
           android:layout_height="match_parent"></android.support.v4.view.ViewPager>
   </LinearLayout>

    <!--放置右上角的dragview-->
    <phone1000.com.firemilitary.easytagdragview.EasyTipDragView
        android:id="@+id/tuijianfragment_esaytipdragview"
        android:layout_width="match_parent"
        android:background="#dddddd"
        android:layout_height="match_parent"></phone1000.com.firemilitary.easytagdragview.EasyTipDragView>
</FrameLayout>
